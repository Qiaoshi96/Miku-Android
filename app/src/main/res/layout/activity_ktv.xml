<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <RelativeLayout
        android:layout_weight="2"
        android:background="#b64c3838"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        >
        <ImageView
            android:id="@+id/iv_back"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"
            android:src="@mipmap/back"
            android:layout_width="15dp"
            android:layout_height="15dp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/iv_back"
            android:layout_marginLeft="5dp"
            >

            <TextView
                android:id="@+id/TextView_nick"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="昵称"
                android:textColor="@color/midoRed"
                android:textSize="17sp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="的房间"
                android:textColor="@color/midoRed"
                android:textSize="17sp"
                />
        </LinearLayout>

    </RelativeLayout>
    <LinearLayout
        android:layout_weight="12"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp">

        <LinearLayout
            android:id="@+id/ll_1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <com.miku.ktv.miku_android.view.view.VideoGridView
                android:id="@+id/v0"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#6098f4">

            </com.miku.ktv.miku_android.view.view.VideoGridView>

            <com.miku.ktv.miku_android.view.view.VideoGridView
                android:id="@+id/v1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#01f20d" />

            <com.miku.ktv.miku_android.view.view.VideoGridView
                android:id="@+id/v2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.01"
                android:background="#385f9f" />

            <com.miku.ktv.miku_android.view.view.VideoGridView
                android:id="@+id/v3"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#e322c9" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_2"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <com.miku.ktv.miku_android.view.view.VideoGridView
                android:id="@+id/v4"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#b74416" />

            <com.miku.ktv.miku_android.view.view.VideoGridView
                android:id="@+id/v5"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#df9d0e" />

            <com.miku.ktv.miku_android.view.view.VideoGridView
                android:id="@+id/v6"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#5a18de7c" />

            <com.miku.ktv.miku_android.view.view.VideoGridView
                android:id="@+id/v7"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#60caed" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_3"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <com.miku.ktv.miku_android.view.view.VideoGridView
                android:id="@+id/v8"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#a3842177" />

            <com.miku.ktv.miku_android.view.view.VideoGridView
                android:id="@+id/v9"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#aee293e1" />

            <com.miku.ktv.miku_android.view.view.VideoGridView
                android:id="@+id/v10"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#c3d7dd23" />

            <com.miku.ktv.miku_android.view.view.VideoGridView
                android:id="@+id/v11"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#e34922" />
        </LinearLayout>
    </LinearLayout>
    <View
        android:layout_weight="1"
        android:background="#b64c3838"
        android:layout_width="match_parent"
        android:layout_height="0dp"/>
    <com.miku.ktv.miku_android.view.view.LRCLayout
        android:id="@+id/lrc_layout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#000"/>

    <TextView
        android:id="@+id/tv_singer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#b64c3838"
        android:paddingRight="5dp"
        android:text="TextView"
        android:textAlignment="textEnd"
        android:textColor="#FFFFFF" />

    <View
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:background="#b64c3838" />

    <RelativeLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="#b64c3838"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_centerVertical="true"
            >

            <ImageView
                android:id="@+id/ImageView_more"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/more"
                android:layout_marginLeft="10dp"
                android:layout_gravity="center_vertical"
                />
            <ImageView
                android:id="@+id/ImageView_diange"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/tiao"
                android:layout_marginLeft="10dp"
                />
            <ImageView
                android:id="@+id/ImageView_maixu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/maixu"
                android:layout_marginLeft="10dp"
                />

        </LinearLayout>

        <RelativeLayout
            android:id="@+id/Controller_video"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="8dp"
            >
            <ImageView
                android:id="@+id/ImageView_close"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/close"
                />

            <ImageView
                android:id="@+id/ImageView_open"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/open"
                android:visibility="gone"
                />
        </RelativeLayout>


    </RelativeLayout>
</LinearLayout>
