<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_register"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.miku.ktv.miku_android.view.activity.RegisterSettingActivity">

    <LinearLayout
        android:id="@+id/RS_Back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <ImageView
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:src="@mipmap/back"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="12dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="返回"
            android:textSize="17sp"
            android:layout_marginTop="11dp"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:gravity="center"
        >
        <LinearLayout
            android:id="@+id/RS_LinearLayout_Head"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            >
            <LinearLayout
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:orientation="horizontal"
                android:background="@drawable/shape_register_head"
                android:gravity="center"
                >
                <com.miku.ktv.miku_android.view.custom.CircleImage
                    android:id="@+id/RS_ImageView_Head"
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:src="@mipmap/mine_titlebar_normal"
                    />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="设置头像"
                android:textSize="13sp"
                android:layout_marginTop="5dp"
                />

        </LinearLayout>

        <EditText
            android:id="@+id/RS_EditText_Nick"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:hint="请输入昵称"
            android:textCursorDrawable="@null"
            android:layout_marginTop="20dp"
            android:background="@drawable/shape_register_et"
            />

        <RadioGroup
            android:id="@+id/RS_RadioGroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="13dp"
            >
            <TextView
                android:id="@+id/RS_TextView_Man"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="男"
                />
            <RadioButton
                android:id="@+id/RS_RadioButton_Man"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_marginLeft="3dp"
                android:layout_marginTop="1dp"
                android:background="@drawable/selector_register_checkbox"
                android:button="@null"
                />
            <TextView
                android:id="@+id/RS_TextView_WoMan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="女"
                android:layout_marginLeft="30dp"
                />
            <RadioButton
                android:id="@+id/RS_RadioButton_WoMan"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_marginLeft="3dp"
                android:layout_marginTop="1dp"
                android:background="@drawable/selector_register_checkbox"
                android:button="@null"
                />

        </RadioGroup>
        <TextView
            android:id="@+id/RS_TextView_Register"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:text="注册"
            android:textSize="17sp"
            android:textColor="#ffffff"
            android:gravity="center"
            android:layout_marginTop="20dp"
            android:background="@drawable/shape_register_tv"
            />

    </LinearLayout>
</RelativeLayout>
