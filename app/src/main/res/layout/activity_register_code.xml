<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_register_code"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.miku.ktv.miku_android.view.activity.RegisterCodeActivity">

    <LinearLayout
        android:id="@+id/Register_LinearLayout_Back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <ImageView
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:src="@mipmap/back"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="15dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="返回"
            android:textSize="17sp"
            android:layout_marginTop="11dp"
            />
    </LinearLayout>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="手机号注册"
        android:textSize="18sp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="11dp"
        />

    <LinearLayout
        android:id="@+id/Register_LinearLayout_Phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="120dp"
        >
        <LinearLayout
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:orientation="horizontal"
            android:gravity="center"
            android:background="@drawable/shape_login_linear"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+86"
                android:textSize="16sp"
                android:textColor="#000000"
                />
        </LinearLayout>
        <EditText
            android:id="@+id/Register_EditText_Phone"
            android:layout_width="200dp"
            android:layout_height="48dp"
            android:hint="填写手机号"
            android:textCursorDrawable="@null"
            android:inputType="number"
            android:layout_marginLeft="5dp"
            android:background="@drawable/shape_register_et"
            />
    </LinearLayout>

    <!--android:visibility="gone"-->
    <TextView
        android:id="@+id/Register_TextView_PhoneError"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="手机号不正确"
        android:textSize="12sp"
        android:textColor="#EA566C"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/Register_LinearLayout_Phone"
        android:visibility="gone"
        />
    <TextView
        android:id="@+id/Register_TextView_Send"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="发送验证码"
        android:textSize="17sp"
        android:textColor="#FFFFFF"
        android:background="#EA566C"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:layout_above="@id/Register_TextView_Send"
        android:layout_marginBottom="15dp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="注册即代表同意"
            android:textColor="#CDCDD3"
            />
        <TextView
            android:id="@+id/Register_TextView_Web"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="《Bolo用户协议》"
            />

    </LinearLayout>

</RelativeLayout>
