<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.miku.ktv.miku_android.view.activity.EditActivity">

    <RelativeLayout
        android:id="@+id/Edit_RelativeLayout"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:background="@color/background"
        >
        <ImageView
            android:id="@+id/Edit_ImageView_Back"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:src="@mipmap/back_white"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="40dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="编辑资料"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="35dp"
            />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@id/Edit_RelativeLayout"
        >

        <RelativeLayout
            android:id="@+id/Edit_RelativeLayout_Head"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:background="@color/white"
            >

            <com.miku.ktv.miku_android.view.custom.CircleImage
                android:id="@+id/Edit_Circle_Head"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:src="@mipmap/bg9"
                android:layout_alignParentRight="true"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="头像"
                android:textSize="18sp"
                android:layout_centerVertical="true"
                android:layout_alignParentStart="true"
                android:id="@+id/textView"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/Edit_RelativeLayout_Nick"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:padding="10dp"
            android:layout_marginTop="5dp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="昵称"
                android:textSize="18sp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="6dp"
                />
            <TextView
                android:id="@+id/Edit_TextView_Nick"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="你的昵称"
                android:textSize="17sp"
                android:textColor="#D4D4D4"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="25dp"
                />
            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:src="@mipmap/icon_right_black"
                android:layout_alignParentRight="true"
                android:layout_marginTop="2dp"
                />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#D4D4D4"
            android:layout_marginLeft="14dp"
            android:layout_marginRight="14dp"
            />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:padding="10dp"
            >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ID"
            android:textSize="18sp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="6dp"
            />
        <TextView
            android:id="@+id/Edit_TextView_ID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="你的ID"
            android:textSize="17sp"
            android:textColor="#D4D4D4"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"
            />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/Edit_RelativeLayout_Sign"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:padding="10dp"
            android:layout_marginTop="5dp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="个性签名"
                android:textSize="18sp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="6dp"
                />
            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:src="@mipmap/icon_right_black"
                android:layout_alignParentRight="true"
                android:layout_marginTop="2dp"
                />

        </RelativeLayout>

    </LinearLayout>


</RelativeLayout>
