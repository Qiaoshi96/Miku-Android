<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_home"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.miku.ktv.miku_android.view.activity.HomeActivity">

    <ImageView
        android:id="@+id/Home_ImageView_Menu"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:src="@mipmap/icon_home_unselect"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="15dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MICO"
        android:textColor="#000000"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        />
    <ImageView
        android:id="@+id/Home_ImageView_Add"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@mipmap/icon_add_address"
        android:layout_alignParentRight="true"
        android:layout_marginTop="10dp"
        android:layout_marginRight="15dp"
        />
    <View
        android:id="@+id/Home_View"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#D4D4D4"
        android:layout_below="@id/Home_ImageView_Menu"
        android:layout_marginTop="9dp"
        />

    <ListView
        android:id="@+id/Home_lv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/Home_View"
        android:layout_marginTop="1dp"
        android:minHeight="100dp"
        android:divider="#00000000"
        android:dividerHeight="2dp"
        >
    </ListView>

</RelativeLayout>
